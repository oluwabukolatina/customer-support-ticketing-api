{
  "name": "fliqpay",
  "version": "1.0.0",
  "description": "fliq pay backend test",
  "main": "server.js",
  "scripts": {
    "start": "nodemon server.js",
    "lint:js": "eslint . --ext .js,.jsx,.tsx",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "lint:ts": "eslint --ext=jsx,ts,tsx src",
    "test": "mocha __tests__/**/*test.js"
  },
  "keywords": [
    "nodejs",
    "express",
    "rest-api",
    "mongodb"
  ],
  "author": "tina",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.22",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.4"
  },
  "devDependencies": {
    "eslint": "^7.2.0",
    "eslint-plugin-import": "^2.21.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.9",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "mocha": "^7.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "precommit": "NODE_ENV=production lint-staged",
  "lint-staged": {
    "src/**/*.{js,jsx,tsx}": [
      "eslint --fix"
    ]
  }
}
